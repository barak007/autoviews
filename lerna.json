{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": ["master"],
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): publish [skip ci]"
    },
    "publish": {
      "verifyAccess": false
    }
  }
}
