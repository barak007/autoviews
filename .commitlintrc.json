{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "subject-case": [
      2,
      "always",
      ["lower-case", "sentence-case", "pascal-case", "start-case"]
    ],
    "header-max-length": [2, "always", "Infinity"],
    "body-max-line-length": [2, "always", "Infinity"],
    "footer-max-line-length": [2, "always", "Infinity"]
  }
}
